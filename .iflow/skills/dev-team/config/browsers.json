{"$schema": "http://json-schema.org/draft-07/schema#", "title": "Browser Support Configuration", "description": "Defines browser support matrix and testing requirements", "type": "object", "properties": {"supportStrategy": {"type": "string", "description": "Browser support strategy", "enum": ["progressive-enhancement", "graceful-degradation", "feature-detection"], "default": "progressive-enhancement"}, "targetBrowsers": {"type": "object", "description": "Target browser versions", "properties": {"chrome": {"type": "string", "description": "Chrome version support", "default": "last 2 versions"}, "firefox": {"type": "string", "description": "Firefox version support", "default": "last 2 versions"}, "safari": {"type": "string", "description": "Safari version support", "default": "last 2 versions"}, "edge": {"type": "string", "description": "Edge version support", "default": "last 2 versions"}, "iosSafari": {"type": "string", "description": "iOS Safari version support", "default": "last 2 versions"}, "androidChrome": {"type": "string", "description": "Android Chrome version support", "default": "last 2 versions"}, "samsungInternet": {"type": "string", "description": "Samsung Internet version support", "default": "last 2 versions"}, "opera": {"type": "string", "description": "Opera version support", "default": "last 2 versions"}}, "required": ["chrome", "firefox", "safari", "edge", "iosSafari", "androidChrome"]}, "legacySupport": {"type": "object", "description": "Legacy browser support options", "properties": {"ie11": {"type": "boolean", "description": "Support Internet Explorer 11", "default": false}, "ie10": {"type": "boolean", "description": "Support Internet Explorer 10", "default": false}, "oldEdge": {"type": "boolean", "description": "Support legacy Edge (EdgeHTML)", "default": false}, "oldSafari": {"type": "boolean", "description": "Support Safari versions < 12", "default": false}}, "required": ["ie11", "ie10", "oldEdge", "oldSafari"]}, "features": {"type": "object