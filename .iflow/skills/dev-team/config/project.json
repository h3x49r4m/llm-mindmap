{"$schema": "http://json-schema.org/draft-07/schema#", "title": "Project Configuration", "description": "Defines project-level settings and technology stack preferences", "type": "object", "properties": {"metadata": {"type": "object", "description": "Project metadata", "properties": {"name": {"type": "string", "description": "Project name"}, "version": {"type": "string", "description": "Project version", "pattern": "^\\d+\\.\\d+\\.\\d+(-.*)?$"}, "description": {"type": "string", "description": "Project description"}, "author": {"type": "string", "description": "Project author or organization"}, "license": {"type": "string", "description": "Project license"}}, "required": ["name", "version"]}, "technologyStack": {"type": "object", "description": "Technology stack preferences", "properties": {"frontend": {"type": "object", "description": "Frontend technology preferences", "properties": {"framework": {"type": "string", "description": "Preferred frontend framework", "enum": ["react", "vue", "angular", "svelte", "vanilla", "next", "nuxt", "gatsby"], "default": "react"}, "language": {"type": "string", "description": "Programming language", "enum": ["javascript", "typescript"], "default": "typescript"}, "styling": {"type": "string", "description": "Styling approach", "enum": ["css", "scss", "tailwind", "styled-components", "emotion", "css-modules"], "default": "tailwind"}, "uiLibrary": {"type": "string", "description": "UI component library", "enum": ["material-ui", "ant-design", "chakra-ui", "bootstrap", "headless-ui", "radix-ui", "none"], "default": "headless-ui"}, "buildTool": {"type": "string", "description": "Build tool", "enum": ["vite", "webpack", "parcel", "esbuild", "rollup"], "default": "vite"}}, "required": ["framework", "language"]}, "backend": {"type": "object", "description": "Backend technology preferences", "properties": {"runtime": {"type": "string", "description": "Backend runtime", "enum": ["node", "python", "go", "rust", "java", "dotnet"], "default": "node"}, "framework": {"type": "string", "description": "Backend framework", "default": "express"}, "language": {"type": "string", "description": "Programming language", "enum": ["javascript", "typescript", "python", "go", "rust", "java", "csharp"], "default": "typescript"}, "database": {"type": "string", "description": "Database type", "enum": ["postgresql", "mysql", "mongodb", "sqlite", "redis", "dynamodb"], "default": "postgresql"}, "orm": {"type": "string", "description": "ORM/ODM library", "default": "prisma"}, "authentication": {"type": "string", "description": "Authentication strategy", "enum": ["jwt", "oauth2", "session", "custom"], "default": "jwt"}}, "required": ["runtime", "language", "database"]}, "testing": {"type": "object", "description": "Testing framework preferences", "properties": {"unit": {"type": "string", "description": "Unit testing framework", "default": "jest"}, "integration": {"type": "string", "description": "Integration testing framework", "default": "jest"}, "e2e": {"type": "string", "description": "End-to-end testing framework", "enum": ["playwright", "cypress", "puppeteer", "selenium"], "default": "playwright"}, "coverage": {"type": "string", "description": "Coverage tool", "default": "c8"}}, "required": ["unit", "e2e"]}, "devops": {"type": "object", "description": "DevOps tooling preferences", "properties": {"ci": {"type": "string", "description": "CI platform", "enum": ["github-actions", "gitlab-ci", "circleci", "travis", "jenkins"], "default": "github-actions"}, "cd": {"type": "string", "description": "CD strategy", "enum": ["docker", "kubernetes", "aws-lambda", "vercel", "netlify", "custom"], "default": "docker"}, "monitoring": {"type": "string", "description": "Monitoring solution", "enum": ["prometheus", "datadog", "new-relic", "sentry", "cloudwatch"], "default": "sentry"}, "logging": {"type": "string", "description": "Logging solution", "enum": ["winston", "pino", "bunyan", "cloudwatch-logs", "custom"], "default": "winston"}}, "required": ["ci", "cd"]}}, "required": ["frontend", "backend", "testing", "devops"]}, "codeStyle": {"type": "object", "description": "Code style and formatting preferences", "properties": {"formatter": {"type": "string", "description": "Code formatter", "enum": ["prettier", "biome", "none"], "default": "prettier"}, "linter": {"type": "string", "description": "Linter", "enum": ["eslint", "ruff", "flake8", "golangci-lint", "clippy", "none"], "default": "eslint"}, "lineLength": {"type": "number", "description": "Maximum line length", "minimum": 80, "default": 100}, "indentation": {"type": "string", "description": "Indentation style", "enum": ["spaces", "tabs"], "default": "spaces"}, "indentSize": {"type": "number", "description": "Indentation size", "minimum": 2, "maximum": 8, "default": 2}, "semicolons": {"type": "boolean", "description": "Require semicolons", "default": true}, "quotes": {"type": "string", "description": "Quote style", "enum": ["single", "double", "backtick"], "default": "single"}, "trailingCommas": {"type": "boolean", "description": "Use trailing commas", "default": true}}, "required": ["formatter", "linter", "lineLength"]}, "workflow": {"type": "object", "description": "Workflow and process settings", "properties": {"developmentMode": {"type": "string", "description": "Development workflow mode", "enum": ["tdd", "bdd", "agile", "kanban"], "default": "tdd"}, "codeReviewRequired": {"type": "boolean", "description": "Require code review for all changes", "default": true}, "minimumReviewers": {"type": "number", "description": "Minimum number of code reviewers", "minimum": 1, "default": 1}, "autoMerge": {"type": "boolean", "description": "Enable automatic merging after approval", "default": false}, "branchProtection": {"type": "boolean", "description": "Enable branch protection rules", "default": true}, "requireTests": {"type": "boolean", "description": "Require tests for all changes", "default": true}, "requireDocumentation": {"type": "boolean", "description": "Require documentation for API changes", "default": true}}, "required": ["developmentMode", "codeReviewRequired", "requireTests"]}, "environment": {"type": "object", "description": "Environment-specific settings", "properties": {"nodeVersion": {"type": "string", "description": "Required Node.js version", "default": ">=18.0.0"}, "pythonVersion": {"type": "string", "description": "Required Python version", "default": ">=3.11"}, "goVersion": {"type": "string", "description": "Required Go version", "default": ">=1.21"}}}}, "required": ["metadata", "technologyStack", "codeStyle", "workflow"]}